---
const DATABASE = [
  {
    name: "PostgreSQL",
    icon: "/postgresql.svg",
  },
  {
    name: "MongoDB",
    icon: "/mongodb.svg",
  },
];

const DATA_TECNOLOGIES = [
  {
    name: "Python",
    icon: "/python.svg",
  },
  {
    name: "Pandas",
    icon: "/Pandas.svg",
  },
  {
    name: "Numpy",
    icon: "/Numpy.svg",
  },
  {
    name: "Excel",
    icon: "/excel.svg",
  },
  {
    name: "Matplotlib",
    icon: "/Matplotlib.svg",
  },
  {
    name: "Jupyter",
    icon: "/Jupyter.svg",
  },
  {
    name: "Power Bi",
    icon: "/powerBi.svg",
  },
];
const TOOLS = [
  {
    name: "Git",
    icon: "/git.svg",
  },
  {
    name: "GitHub",
    icon: "/github.svg",
  },
];

const TECNOLOGIES = [
  {
    name: "Tailwind",
    icon: "/tailwindcss.svg",
  },
  {
    name: "Javascript",
    icon: "/javascript.svg",
  },
  {
    name: "Typescript",
    icon: "/typescript.svg",
  },
  {
    name: "React",
    icon: "/react.svg",
  },
  {
    name: "Next JS",
    icon: "/nextjs.svg",
  },
  {
    name: "Django",
    icon: "/django.svg",
  },
  {
    name: "Express",
    icon: "/expressjs.svg",
  },
];
---

<div class="mb-10">
  <h2 class="text-2xl font-bold text-white mb-4">Desarrollo Web</h2>
  <div class="grid grid-cols-7 gap-1">
    {
      TECNOLOGIES.map((web) => {
        return (
          <div class="relative flex flex-col items-center group">
            <img
              src={web.icon}
              alt={web.name}
              class="w-12 h-12 transition-transform group-hover:scale-110"
            />
            <p class="opacity-0 text-white transition-opacity absolute top-full mt-2 text-sm group-hover:opacity-100">
              {web.name}
            </p>
          </div>
        );
      })
    }
  </div>
</div>
<div class="mb-10">
  <h2 class="text-2xl font-bold text-white mb-4">Analisis de datos</h2>
  <div class="grid grid-cols-7 gap-1">
    {
      DATA_TECNOLOGIES.map((data) => {
        return (
          <div class="relative flex flex-col items-center group">
            <img
              src={data.icon}
              alt={data.name}
              class="w-12 h-12 transition-transform group-hover:scale-110"
            />
            <p class="opacity-0 text-white transition-opacity absolute top-full mt-2 text-sm group-hover:opacity-100">
              {data.name}
            </p>
          </div>
        );
      })
    }
  </div>
</div>
<div class="mb-10">
  <h2 class="text-2xl font-bold text-white mb-4">Bases de datos</h2>
  <div class="grid grid-cols-7 gap-1">
    {
      DATABASE.map((database) => {
        return (
          <div class="relative flex flex-col items-center group">
            <img
              src={database.icon}
              alt={database.name}
              class="w-12 h-12 transition-transform group-hover:scale-110"
            />
            <p class="opacity-0 text-white transition-opacity absolute top-full mt-2 text-sm group-hover:opacity-100">
              {database.name}
            </p>
          </div>
        );
      })
    }
  </div>
</div>
<div class="mb-10">
  <h2 class="text-2xl font-bold text-white mb-4">herramientas</h2>
  <div class="grid grid-cols-7 gap-1">
    {
      TOOLS.map((tool) => {
        return (
          <div class="relative flex flex-col items-center group">
            <img
              src={tool.icon}
              alt={tool.name}
              class="w-12 h-12 transition-transform group-hover:scale-110"
            />
            <p class="opacity-0 text-white transition-opacity absolute top-full mt-2 text-sm group-hover:opacity-100">
              {tool.name}
            </p>
          </div>
        );
      })
    }
  </div>
</div>
